<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@mipmap/background_item_list"
    android:padding="3dp"
    android:layout_height="70dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_avatar"
            android:id="@+id/row_list_invitation_avatar" />
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorwhite"
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row_list_invitation_txt_name" />

            <TextView
                android:layout_marginTop="3dp"
                android:textSize="14sp"
                android:textColor="@color/colorwhite"
                android:text="0123456789"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row_list_invitation_txt_numberphone" />
        </LinearLayout>
        <Button
            android:textColor="@color/colorwhite"
            android:layout_marginRight="5dp"
            android:background="@mipmap/background_bt"
            android:layout_gravity="center"
            android:text="@string/button_ok"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/row_bt_list_invitation_ok" />
        <Button
            android:textColor="@color/colorwhite"
            android:layout_marginRight="5dp"
            android:background="@mipmap/background_ed_user"
            android:layout_gravity="center"
            android:text="@string/button_no"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/row_bt_list_invitation_no" />
    </LinearLayout>
</LinearLayout>